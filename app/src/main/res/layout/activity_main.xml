<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainView"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next:"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/nextCard"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/enemy_main_castle"
            android:src="@drawable/enemy_main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.023" />

    <ImageView
            android:id="@+id/enemy_subcastle"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/enemy_subcastle2"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/enemy_subcastle2"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/enemy_subcastle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintVertical_bias="0.855" />

    <ImageView
            android:id="@+id/subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enemy_subcastle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/subcastle2"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.79" />

    <ImageView
            android:id="@+id/subcastle2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enemy_subcastle2"
            app:layout_constraintLeft_toRightOf="@+id/subcastle"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.79" />

    <ImageButton
            android:id="@+id/nextCard"
            android:tag="nextCard"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
            android:id="@+id/cardOne"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="95dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
<!--            app:layout_constraintLeft_toRightOf="@+id/nextCard"/>-->

    <ImageButton
            android:id="@+id/cardTwo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="170dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
<!--            app:layout_constraintLeft_toRightOf="@+id/cardOne"/>-->

    <ImageButton
            android:id="@+id/cardThree"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="245dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
<!--            app:layout_constraintLeft_toRightOf="@+id/cardTwo"/>-->

    <ImageButton
            android:id="@+id/cardFour"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="320dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
<!--            app:layout_constraintLeft_toRightOf="@+id/cardThree"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>
