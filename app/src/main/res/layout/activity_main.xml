<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainView"
        tools:context=".MainActivity">


    <ImageView
            android:id="@+id/enemy_main_castle"
            android:src="@drawable/enemy_main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintVertical_bias="0.02" />

    <ImageView
            android:id="@+id/enemy_subcastle"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/enemy_subcastle2"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintVertical_bias="0.855" />

    <ImageView
            android:id="@+id/main_castle2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.79" />

    <ImageView
            android:id="@+id/main_castle3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.79" />

    <ImageButton
            android:id="@+id/archor_card"
            android:tag="card_archor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/archor_card" />

    <ImageButton
            android:id="@+id/hogRider_card"
            android:tag="card_hogRider"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/archor_card"
            android:src="@drawable/hogrider_card"/>

    <ImageButton
            android:id="@+id/giant_card"
            android:tag="giant_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/hogRider_card"
            android:src="@drawable/giant_card"/>

    <ImageButton
            android:id="@+id/fireball_card"
            android:tag="@string/fireball_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/giant_card"
            android:src="@drawable/fireball_card"/>

    <ImageButton
            android:id="@+id/zap_card"
            android:tag="@string/fireball_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/fireball_card"
            android:src="@drawable/zap_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>
