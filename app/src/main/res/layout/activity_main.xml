<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainView"
        tools:context=".MainActivity">


    <fragment
            android:id="@+id/timer_fragment"
            android:name="com.example.clashroyale.Fragment_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
            android:id="@+id/enemy_main_castle"
            android:src="@drawable/enemy_main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.023" />

    <ImageView
            android:id="@+id/enemy_subcastle"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/enemy_subcastle2"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/enemy_subcastle2"
            android:src="@drawable/enemy_subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/enemy_subcastle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.08" />

    <ImageView
            android:id="@+id/main_castle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintVertical_bias="0.855" />

    <ImageView
            android:id="@+id/subcastle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enemy_subcastle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/subcastle2"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.79" />

    <ImageView
            android:id="@+id/subcastle2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enemy_subcastle2"
            app:layout_constraintLeft_toRightOf="@+id/subcastle"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/main_castle"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.79" />

    <fragment
            android:id="@+id/cardDeck"
            android:name="com.example.clashroyale.Fragment_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
