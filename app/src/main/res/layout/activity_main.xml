<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lobby_background"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    <ImageButton
            android:id="@+id/nameBox"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/material_on_background_disabled"
            tools:layout_editor_absoluteY="5dp"
            tools:layout_editor_absoluteX="3dp" />

     <ImageView
            android:id="@+id/clash_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/clash_royale_logo"
            app:layout_constraintEnd_toEndOf="@+id/nameBox"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            app:layout_constraintBottom_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toStartOf="@+id/nameBox"
            app:layout_constraintHorizontal_bias="0.01" />

    <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selena"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/clash_logo"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Clan"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="-4dp"
            app:layout_constraintStart_toEndOf="@+id/clash_logo"
            app:layout_constraintTop_toBottomOf="@+id/accountName" />

    <ImageView
            android:id="@+id/coins"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/coins"
            app:layout_constraintEnd_toEndOf="@+id/nameBox"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            app:layout_constraintBottom_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toStartOf="@+id/nameBox"
            app:layout_constraintHorizontal_bias="0.45" />

    <TextView
            android:id="@+id/coinsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            app:layout_constraintStart_toEndOf="@+id/coins"
            app:layout_constraintBottom_toBottomOf="@+id/nameBox" />

    <ImageView
            android:id="@+id/trophy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/trophy"
            app:layout_constraintEnd_toEndOf="@+id/nameBox"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            app:layout_constraintBottom_toBottomOf="@+id/nameBox"
            app:layout_constraintEnd_toStartOf="@+id/trophyNum" />

    <TextView
            android:id="@+id/trophyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/nameBox"
            app:layout_constraintEnd_toEndOf="@+id/nameBox"
            app:layout_constraintBottom_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toStartOf="@+id/nameBox"
            app:layout_constraintHorizontal_bias="0.95" />

    <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/sord2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.222" />

    <Button
            android:id="@+id/battle"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Battle"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/inputserif_bold"
            android:background="@drawable/shadow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.557" />

</androidx.constraintlayout.widget.ConstraintLayout>